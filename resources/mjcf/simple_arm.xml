<mujoco model="simple_arm">
  <!-- Simple 3-DOF arm for testing MJCF parsing -->
  <compiler angle="radian"/>

  <default>
    <joint axis="0 0 1" range="-3.14159 3.14159"/>
    <geom type="capsule" size="0.02"/>
  </default>

  <worldbody>
    <light pos="0 0 2"/>
    <geom type="plane" size="1 1 0.1" rgba="0.8 0.8 0.8 1"/>

    <body name="base" pos="0 0 0.1">
      <geom type="cylinder" size="0.05 0.05" rgba="0.3 0.3 0.3 1"/>
      <body name="link1" pos="0 0 0.05">
        <joint name="joint1" type="hinge" axis="0 0 1"/>
        <geom fromto="0 0 0 0.2 0 0" rgba="1 0 0 1"/>
        <body name="link2" pos="0.2 0 0">
          <joint name="joint2" type="hinge" axis="0 1 0"/>
          <geom fromto="0 0 0 0.15 0 0" rgba="0 1 0 1"/>
          <body name="link3" pos="0.15 0 0">
            <joint name="joint3" type="hinge" axis="0 1 0"/>
            <geom fromto="0 0 0 0.1 0 0" rgba="0 0 1 1"/>
            <site name="end_effector" pos="0.1 0 0"/>
          </body>
        </body>
      </body>
    </body>
  </worldbody>
</mujoco>
